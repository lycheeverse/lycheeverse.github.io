{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!!.astro", "!!dist"]
	},
	"html": {
		"experimentalFullSupportEnabled": true
	},
	"formatter": {
		"lineEnding": "auto"
	},
	"overrides": [
		{
			"includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
